<script>
    window.onload = function() {
        // 1. Safety check for Leaflet
        if (typeof L === 'undefined') {
            document.getElementById('error-msg').style.display = 'block';
            return;
        }

        // 2. Initialize the map
        try {
            var map = L.map('map', { 
                center: [20, 0], 
                zoom: 2, 
                zoomControl: false,
                attributionControl: false 
            });

            // Using standard OpenStreetMap tiles - very high reliability
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                maxZoom: 19
            }).addTo(map);

            // Add grayscale filter to map for the 'NOC' look via CSS
            document.getElementById('map').style.filter = "invert(100%) hue-
